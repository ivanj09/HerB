<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="editTextBackground">@drawable/layer_1_not_focused_edit_text</item>
        <item name="editTextStyle">@style/HerBEditTextStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Login activity theme. -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="editTextBackground">@drawable/layer_1_not_focused_edit_text</item>
        <item name="editTextStyle">@style/HerBEditTextStyle</item>
        <item name="android:textViewStyle">@style/HerBTextViewStyle</item>
        <item name="buttonStyle">@style/HerBButtonTextStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Custom Text for Welcome Screen Login Activity -->
    <style name="TitleText">
        <item name="android:fontFamily">@font/caviar_dreams_bold</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <!-- Custom EditText -->
    <style name="HerBEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/sf_pro_display_light</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Custom Button Text Style -->
    <style name="HerBButtonTextStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
    </style>

    <style name="HerBTextViewStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>

</resources>
